{
  "include": ["lib/**/*.js"],
  "exclude": ["test/**"],
  "compilerOptions": {
    "declaration": false,
    "allowJs": true,
    "checkJs": false,
    "outDir": "dist/esm",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  }
}
